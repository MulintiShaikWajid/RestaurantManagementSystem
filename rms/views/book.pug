extends customer_base

block content
    div.container
        <form method="POST" action="/customer/book/">
            <div class="form-group">
                <label for="tableno">Table Number</label>
                input(type="number" required min="0" max=total_tables class="form-control mb-2 mr-sm-2" id="tableno" name="tableno")
            </div>
            <div class="form-group">
                <label for="year">Year</label>
                input(type="number" min="2021" required class="form-control mb-2 mr-sm-2" id="year" name="year")
            </div>
            <div class="form-check">
                <label class="form-check-label" for="month">Month(1 to 12)</label>
                input(type="number" min="1" max="12" required class="form-control mb-2 mr-sm-2" id="month" name="month")
            </div>
            <div class="form-check">
                <label class="form-check-label" for="day">Day</label>
                input(type="number" required class="form-control mb-2 mr-sm-2" id="day" name="day")
            </div>
            <div class="form-check">
                <label class="form-check-label" for="hour">Hour(0 to 23, Eg: 9 imply 9am to 10am)</label>
                input(type="number" min="0" max="23" required class="form-control mb-2 mr-sm-2" id="hour" name="hour")
            </div>
            br
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        br
        <table class="table-responsive-sm table table-striped table-hover table-bordered">
            <thead>
                <tr>
                <th scope="col">Table id</th>
                <th scope="col">capacity</th>
                <th scope="col">location</th>
                </tr>
            </thead>
            <tbody id="main_table">
                each val in details
                    <tr>
                        td #{val['id']}
                        td #{val['capacity']}
                        td #{val['location']}
                    </tr>
            </tbody>
        </table>
    div.container
        if message
            p #{message}