<!DOCTYPE html>

head
    <title>Statistics</title>
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"/> 
    <script src="https://code.angularjs.org/1.4.12/angular.js"></script>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js"/>
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

    body
        h1(style="text-align:center") Statistics
        br
        h3(style="text-align:center") Average cooking time(min) vs items
        div(id = 'mydiv3' class="container")
            br
            canvas(id = "mychart3")
        br
        h3(style="text-align:center") Average no.of orders vs day
        div(id = 'mydiv4' class="container")
            br
            canvas(id = "mychart4")
            
        br
        h3(style="text-align:center") Average no.of orders vs time slot
        div(id = 'mydiv5' class="container")
            br
            canvas(id = "mychart5")
        br

        h3(style="text-align:center") Popular Dishes:
        <table class="table table-striped table-hover table-bordered" style="text-align:center">
            <tbody id="main_table">
                each val in d
                    <tr>
                        td #{val['name']}
                    </tr>                   
            </tbody>
        </table>
    script.
        let mychart3 = document.getElementById('mychart3').getContext('2d');
        var count = [#{a}];
        <!-- console.log(b) -->
        let barchart3 = new Chart(mychart3, {
            type : 'bar',
            data : {
                labels : [#{items}],
                datasets : [{
                    label : 'Cooking time',
                    backgroundColor : 'rgb(54, 252, 135)',
                    data : count,
                    fill : false,
                    borderColor : 'rgb(54, 252, 135)',
                    tension : 0 }]}});


    script.
        let mychart4 = document.getElementById('mychart4').getContext('2d');
        var count = [#{b[0]},#{b[1]},#{b[2]},#{b[3]},#{b[4]},#{b[5]},#{b[6]}];
        <!-- console.log(b) -->
        let barchart4 = new Chart(mychart4, {
            type : 'line',
            data : {
                labels : ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'],
                datasets : [{
                    label : 'No.of orders',
                    backgroundColor : 'rgb(54, 162, 235)',
                    data : count,
                    fill : false,
                    borderColor : 'rgb(54, 162, 235)',
                    tension : 0 }]}});

    script.
        let mychart5 = document.getElementById('mychart5').getContext('2d');
        var count = [#{c}];
        let barchart5 = new Chart(mychart5, {
            type : 'bar',
            data : {
                labels : [#{slots}],
                datasets : [{
                    label : 'No.of orders',
                    backgroundColor : 'rgb(254, 162, 135)',
                    data : count,
                    fill : false,
                    borderColor : 'rgb(254, 162, 135)',
                    tension : 0 }]}});