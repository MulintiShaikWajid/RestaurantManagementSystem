extends customer_base

block content
    div.container
        h1 Details
        <table class="table table-striped table-hover table-bordered">
            <tbody>
                <tr>
                    td Name
                    td #{name}
                </tr>
                <tr>
                    td Price
                    td #{price}
                </tr>
                <tr>
                    td Tags
                    td #{tags}
                </tr>
                <tr>
                    td Ingredients
                    td #{ingredients}
                </tr>
                <tr>
                    td Quantity in cart
                    td #{quantity}
                </tr>
            </tbody>
        <table class="table-responsive-sm table table-striped table-hover table-bordered">
            <thead>
                <tr>
                <th scope="col">Name</th>
                <th scope="col">Stars<button id="sort_button" style="margin-left: 30px" onclick="mymyascending()">&darr;</button></th>
                <th scope="col">Review</th>
                </tr>
            </thead>
            <tbody id="main_table">
                each val in reviews
                    <tr>
                        td #{val['name']}
                        td #{val['stars']}
                        td #{val['review']}
                    </tr>
            </tbody>
        </table>
        <div class="container" style="text-align:center;margin-bottom:30px">
            h1(style="font-family: 'Sacramento', cursive; font-size:60px") Quantity in cart
            form(method="POST",action="")
                input#new_quantity(required type='number',min='0',placeholder=quantity,name='new_quantity')
                button(type='submit') Okay
        </div>
