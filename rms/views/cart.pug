extends customer_base

block content
    div.container
        div.container
            h1(style="font-family: 'Sacramento', cursive; font-size:60px") Cart
        <table class="table-responsive-sm table table-striped table-hover table-bordered">
            <thead>
                <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Change quantity</th>
                </tr>
            </thead>
            <tbody id="main_table">
                each val in details
                    <tr>
                        td 
                            a(href='/customer/menu/'+val['id']) #{val['name']}
                        td #{val['price']}
                        td #{val['quantity']}
                        td  
                            form(class="form-inline" method="POST" action="/customer/menu/"+val['id'])
                                input(type="number" required min="0" class="form-control mb-2 mr-sm-2" id="new_quantity" name="new_quantity" placeholder=val['quantity'])
                                <button type="submit" class="btn btn-primary mb-2">Submit</button>
                    </tr>
            </tbody>
        </table>
        div.container(style="text-align: right")
            p Total price is #{total_price}
        div.container
            form(class="form-inline" method="POST" action="/customer/cart/")
                    label(for="tableno") Table Number
                    input(type="number" required="true" min="0" class="form-control mb-2 mr-sm-2" id="tableno" name="tableno")
                    br
                    <button type="submit" class="btn btn-primary mb-2">Place order</button>
