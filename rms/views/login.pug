    body
        div#parent_block(class="container")
            h1 Welcome to RMS
            form.formLogin(method="POST",action='')
                input#username(type="text",placeholder='username',name='username')
                input#password(type="password",placeholder='password',name='password')
                button(type='submit') Login
            div.container(style="text-align:center")
                <a style="font-size: 20px" href="/customer/create">Dont have an account</a>
            div(style='text-align:center')
                if errors
                    ul
                        for error in errors
                            li #{error.msg}
                p #{message}


