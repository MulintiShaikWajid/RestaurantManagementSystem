    body
        h1 Details
        div.container
            unless message
                form(method="POST",action="")
                    <label for="name">Name:</label>
                    input(type="text",id="name",value=item['name'],name='name')
                    br
                    <label for="price">Price:</label>
                    input(type="text",id="price",value=item['price'],name='price')
                    br
                    each tag in tags
                        <label for="tag">#{tag['type']}</label>
                        input(type='checkbox',id='tag',name='tag',value=tag['id'])
                    br
                    each item in inven
                        <label for="inven">#{item['name']}</label>
                        input(type='text',name='inven',value='0')
                    br
                    button(type='submit') Update
